@model IList<Contract>;
@{ ViewData["Title"] = "My Contracts"; }
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<br />

@{ if (Model != null && Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
    <table style="width:100%" class="table table-responsive table-striped table-bordered">
        <tr>
            <th class="col-sm-1">@nameof(Contract.Id)</th>
            <th class="col-sm-2">@nameof(Contract.Institution)</th>
            <th class="col-sm-3">@nameof(Contract.ValidityDate)</th>
            <th class="col-sm-3">@nameof(Contract.EndDate)</th>
            <th class="col-sm-3">@nameof(Contract.ClosingDate)</th>
        </tr>
        <tr>
            <td class="col-sm-1">@item.Id</td>
            <td class="col-sm-2">@item.Institution</td>
            <td class="col-sm-3">@item.ValidityDate</td>
            <td class="col-sm-3">@item.EndDate</td>
            <td class="col-sm-3">@item.ClosingDate</td>
        </tr>


    </table>
                        

<br />
<br />
<br /> }
}
else
{
<h2>Contracts are empty!</h2> 

}
    }
